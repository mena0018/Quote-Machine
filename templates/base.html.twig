<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="description" content="TP Symfony permettant de r√©aliser le projet 'Quote Machine'">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body style="height: 90vh">

        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <span class="pe-2">üìá</span>
                    QuoteMachine
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" href="#" 
                                   id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    Ajouter
                                </a>
                                    
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li>
                                        <a class="dropdown-item" href="{{ path('quote_new') }}">Ajouter une citation</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_category_new') }}">Ajouter une cat√©gorie</a>
                                    </li>
                                </ul>
                            </div> 
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('quote_random') }}">
                                Citation al√©atoire
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_category_index') }}">
                                Cat√©gorie
                            </a>
                        </li>
                    </ul>
                    <form method="get" class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Rechercher" aria-label="Search"
                               name="content" value="{{ app.request.query.get('content') }}">
                        <button class="btn btn-outline-success" type="submit">Rechercher</button>
                    </form>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="fixed-bottom mb-5  d-inline-flex justify-content-center">
                   <div class="bg-success text-white py-1 px-3 rounded-pill">
                       {{ message }}
                   </div>
                </div>
            {% endfor %}
        {% endfor %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
