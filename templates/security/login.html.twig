{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="card ">
		<div class="row g-0 d-flex align-items-center">
			<div class="col-lg-4 d-none d-lg-flex">
				<img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" alt="Trendy Pants and Shoes" class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5"/>
			</div>
			<div class="col-lg-8 shadow">
				<div class="card-body py-5 px-md-5">
					<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

					<div class="alert alert-info">
						<ul>
							<li>admin@admin.fr / 12341234</li>
							<li>user@user.fr / 1234</li>
						</ul>
					</div>

					<form method="post">

						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								Vous êtes loggés en tant que
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}" class="btn btn-danger ms-lg-2 mt-md-2 mt-lg-0">Déconnexion</a>
							</div>
						{% endif %}

						<div class="form-outline mb-4">
							<label for="inputEmail">Email</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						</div>

						<div class="form-outline mb-4">
							<label for="inputPassword">Password</label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<button type="submit" class="btn btn-primary">Se connecter</button>
						<a href="{{ path('app_register') }}" class="ms-2">S'inscrire</a>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
