 <figure class="m-0 mb-3">
    <blockquote class="fs-5 m-0">{{ quote.content }}</blockquote>
    <figcaption class="text-secondary fst-italic">
        <cite>{{ quote.meta }}</cite>
        {% if quote.category %}
            <a class="ms-1" href="{{ path('app_category_show', {id: quote.category.id}) }}">
                <span class="badge bg-dark">{{ quote.category.name }}</span>
            </a>
        {% endif %}
    </figcaption>
</figure>
<a class="btn btn-light" href="{{ path('quote_edit', {id: quote.id}) }}">Modifier</a>
<a class="btn btn-light" href="{{ path('quote_delete', {id: quote.id}) }}">Supprimer</a>