{% extends 'base.html.twig' %}

{% block title %}Liste des citations{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('/css/quote.css') }}" type="text/css"/>{% endblock %}

{% block body %}

<div class="container-xxl p-3 position-relative">
    <h1 class="pb-5 pt-2 text-center">Liste des citations</h1>
    <ul>
       {% for quote in quotes %}
            <li class="list-unstyled mb-5">
                <figure class="m-0">
                    <blockquote class="fs-5 m-0">{{ quote.content }}</blockquote>
                    <figcaption class="text-secondary fst-italic">{{ quote.meta }}</figcaption>
                </figure>

                <div class="pt-2">
                    <button type="button" class="btn btn-primary">
                        <a class="text-white" href="{{ path('quote_edit', {id: quote.id}) }}">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                    </button>
                    <button type="button" class="btn btn-danger">
                        <a class="text-white" href="{{ path('quote_delete', {id: quote.id}) }}">
                            <i class="fa-solid fa-trash"></i></a>
                    </button>
                </div>
            </li>
       {% else %}
            <li class="list-unstyled py-2 text-center fs-4 text-danger">Aucune citation trouv√©e</li>
       {% endfor %}
    </ul>
    <div class="position-absolute bottom-0 end-0">
        {{ knp_pagination_render(quotes) }}
    </div>
</div>

{% endblock %}
